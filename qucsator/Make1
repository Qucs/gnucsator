substrate.o msline.o: %.o: %.cpp component.h object.h
	$(CXX) $(GNUCAP_CPPFLAGS) $(CPPFLAGS) $(LOCAL_CXXFLAGS) $(CXXFLAGS) -c -fPIC $< -o $@ # qucsator/Make1

