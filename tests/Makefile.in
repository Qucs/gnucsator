include ../Make2

QUCSATOR = qucsator
GNUCSATOR = ../gnucsator.sh
GNUCAP = gnucap$(SUFFIX)

DIFF = diff -w -u
NUMDIFF = numdiff -r1.e-6 -a1.e-8
REF = ref

SHELL = /bin/bash
LN_S = ln -s

all: gc qucs

COMMON_TESTS = \
	AM_Mod.1.net \
	cockroft-walton.net \
	dio.net \
	dc_sweep.0.net \
	dc_sweep.1.net \
	gilbert.net \
	lang_qucs.1.net \
	lang_qucs.2.net \
	lang_qucs.3.net \
	mscoupler.1.net \
	notch.1.net \
	MUT.net \
	pac.net \
	rc.net \
	resonance_ac.net \
	rr.net \
	sparam_e.net \
	sparam.0.net \
	sparam.1.net \
	sub.1.net \
	sub.2.net \
	schmitt.net \
	Switch.0.net \
	wilkinson.net \
	Vrect.1.net \
	Vrect.2.net

GC_TESTS = \
	lang_verilog.param1.gc \
	lang_qucs.1.gc \
	c_hide.2.gc \
	IProbe.1.gc \
	d_eqn.1.gc \
	mscoupler.1.gc \
	qucs.gc \
	list.1.gc \
	wrap.gc \
	wrap.bad.gc \
	rect.gc

NOTYET_GC_TESTS = \
	mscoupler.1.gc

check: diff

diff: \
	$(COMMON_TESTS:%=%.v.diff) \
	$(GC_TESTS:%=%.diff) \
	$(COMMON_TESTS:%=%.gc.diff)

gc: $(GC_TESTS:%.gc=%.gc.out) \
    $(COMMON_TESTS:%.net=%.net.gc.out)

$(COMMON_TESTS:%.net=%.net.gc.out): qucs
$(GC_TESTS:%.net=%.gc.out): qucs
$(COMMON_TESTS:%.net=%.net.v.out): qucs


qucs:
	[ -e qucs ] || ${LN_S} .. qucs

ENV=LD_LIBRARY_PATH=..${LD_LIBRARY_PATH:%=:%} \
	GNUCAP_PLUGPATH=.:..:@plugpath@${GNUCAP_PLUGPATH:%=:%} \
	QUCSATOR_PKGINCLUDEDIR=../include \
	GNUCAP_INCLUDEPATH=../include:.${GNUCAP_INCLUDEPATH:%=:%} \
	GNUCAP_SYSCONFDIR=qucs \
   PATH=..:$$PATH

%.gc.diff: %.gc.out ${REF}/%.gc.out
	${NUMDIFF} $+ | tee $@; exit $${PIPESTATUS[0]}

%.v.diff: %.v.out ${REF}/%.v.out
	${DIFF} $+ | tee $@; exit $${PIPESTATUS[0]}

%.net.v.out: %.net
	@echo ../net2verilog.sh $< $@
	@${ENV} ../net2verilog.sh $< $@

%.net.gc.out: %.net
	@echo "$(GNUCSATOR) -i $< -o /dev/stdout | sed ... > $@"
	@${ENV} $(GNUCSATOR) -i $< -o /dev/stdout | sed -e '/default plugins:/s/:.*/: ignored/' \
	                                                -e '/<Qucs Dataset/s/t .*/t>/' > $@
%.gc.out: %.gc
	@echo "$(GNUCAP) < $< | ... | > $@"
	@${ENV} $(GNUCAP) < $< | grep -v ^@@ | sed -e '1,/^core-lib version/d' \
					                            -e '/default plugins/d' > $@

%.net.qucs.out: %.net
	$(QUCSATOR) -i $< -o $@

$(COMMON_TESTS:%=%.gc.out) $(COMMON_TESTS:%=%.v.out) $(GC_TESTS:%=%.out): .P

.PHONY: .P check diff

.P:
	@:

clean:
	rm -rf ${CLEANFILES}

CLEANFILES = *.out *.dc *.diff *.tr *.sp
